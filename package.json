{
  "name": "hmpps-template-typescript",
  "version": "0.0.1",
  "description": "HMPPS Template Typescript",
  "repository": "git@github.com:ministryofjustice/hmpps-template-typescript.git",
  "license": "MIT",
  "scripts": {
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --no-source-map --load-path=node_modules/govuk-frontend ./assets/sass/application.sass:./assets/stylesheets/application.css ./assets/sass/application-ie8.sass:./assets/stylesheets/application-ie8.css --style compressed",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 200",
    "typecheck": "tsc",
    "test": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets"
  },
  "engines": {
    "node": "^14",
    "npm": "^6.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc && npm test"
    }
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/connect-flash": "0.0.35",
    "agentkeepalive": "^4.1.3",
    "applicationinsights": "^1.8.7",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.14",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^5.0.0",
    "cookie-session": "^1.4.0",
    "csurf": "^1.11.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.1",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^3.9.0",
    "helmet": "^4.1.1",
    "http-errors": "^1.8.0",
    "joi": "^17.2.1",
    "jquery": "^3.5.1",
    "jwt-decode": "^2.2.0",
    "nocache": "^2.1.0",
    "nunjucks": "^3.2.2",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "redis": "^3.0.2",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "@types/csurf": "^1.9.36",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^26.0.14",
    "@types/passport": "^1.0.4",
    "@types/superagent": "^4.1.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "concurrently": "^5.3.0",
    "cypress": "^5.4.0",
    "cypress-multi-reporters": "^1.4.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-html-reporter": "^3.3.0",
    "jest-junit": "^11.1.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.4.1",
    "mocha": "^8.1.3",
    "mocha-junit-reporter": "^2.0.0",
    "nock": "^13.0.4",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
