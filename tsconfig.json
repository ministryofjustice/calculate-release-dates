{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"],
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "assets/**/*.js",
    "integration_tests",
    "dist",
    "cypress.config.ts",
    "typings",
    "coverage"
  ],
  "include": ["**/*.js", "**/*.ts"]
}
