{% extends "../../partials/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - calculation complete" %}
{% set pageId = "calculation-complete" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-panel govuk-panel--confirmation">

        {% if noDates %}
          {% include "../partials/complete/calculationSavedNoDates.njk" %}
        {% else %}
          {% include "../partials/complete/calculationSavedCalculated.njk" %}
        {% endif %}
      </div>

      <div class="govuk-!-margin-top-6">
        <h2 class="govuk-heading-l">What you can do next</h2>
        <p class="govuk-body"><a href={{ "/calculation/" + prisonerDetail.offenderNo +
          "/summary/" + calculationRequestId + "/print" }}>Print the calculation summary</a></p>

        <div class="govuk-body govuk-!-margin-top-6"><span>You can also go back to the following pages for {{ prisonerDetail.firstName | title + ' ' + prisonerDetail.lastName | title }}:</span>
          <ul class="govuk-list govuk-!-margin-top-2">
            <li><a href="{{ courtCasesAndReleaseDatesUrl + '/prisoner/' + prisonerDetail.offenderNo + '/overview'}}">Court case and release dates information</a></li>
            <li><a href={{ digitalPrisonServicesUrl + '/prisoner/' + prisonerDetail.offenderNo }}>Prisoner profile</a></li>
          </ul>
        </div>
        <div class="govuk-!-margin-top-6">
          <p class="govuk-body">Or, go to the <a href={{ digitalPrisonServicesUrl }}> DPS homepage</a>.</p>
        </div>
      </div>

      {% include "../partials/complete/feedbackSection.njk" %}

    </div>
  </div>
{% endblock %}