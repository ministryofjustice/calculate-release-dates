{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

<table id="adjustments-table" class="govuk-table" data-qa="adjustments-table">
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">Additional days awarded</th>
        <th scope="col" class="govuk-table__header">Lawfully at large</th>
        <th scope="col" class="govuk-table__header">Recall sentence remand</th>
        <th scope="col" class="govuk-table__header">Recall sentence tagged bail</th>
        <th scope="col" class="govuk-table__header">Remand</th>
        <th scope="col" class="govuk-table__header">Restore additional days awarded</th>
        <th scope="col" class="govuk-table__header">Special remission</th>
        <th scope="col" class="govuk-table__header">Tagged bail</th>
        <th scope="col" class="govuk-table__header">Unlawfully at large</th>
        <th scope="col" class="govuk-table__header">Unused remand</th>
    </tr>
    </thead>
    <tbody class="govuk-table__body govuk-body-s">
        <tr class="govuk-table__row {{ rowClass }}">
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.additionalDaysAwarded }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.lawfullyAtLarge }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.recallSentenceRemand }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.recallSentenceTaggedBail }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.remand }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.restoredAdditionalDaysAwarded }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.specialRemission }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.taggedBail }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.unlawfullyAtLarge }}</td>
            <td class="govuk-table__cell govuk-!-padding-top-8">{{ adjustmentDetails.unusedRemand }}</td>
        </tr>
    </tbody>
</table>

