{% if model.showBreakdown() %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

            <h2 class="govuk-heading-l govuk-!-margin-top-6">Calculation breakdown</h2>

            <!-- Concurrent sentence breakdown -->
            {% if model.calculationBreakdown.concurrentSentences.length %}
                <div class="govuk-!-margin-bottom-8">
                    <h3 class="govuk-heading-m govuk-!-margin-top-6 govuk-!-margin-bottom-4">
                        {% if model.calculationBreakdown.concurrentSentences.length === 1 and not model.calculationBreakdown.consecutiveSentence %}
                            Sentence
                        {% else %}
                            Concurrent sentences
                        {% endif %}
                    </h3>
                    {% include "./calculationSummary/concurrentSentenceTable.njk" %}
                </div>
            {% endif %}
        </div>
    </div>

    <div class="govuk-grid-row">

        {% if model.calculationBreakdown.consecutiveSentence %}
            <div class="govuk-grid-column-one-half">
                <h3 class="govuk-heading-m govuk-!-margin-bottom-4"
                   data-qa="consecutive-start-date">Consecutive sentences start date: <span
                            class="govuk-body">{{ model.calculationBreakdown.consecutiveSentence.sentencedAt | hmppsFormatDate('dd MMMM yyyy') }}</span>
                </p>
                {% include "./calculationSummary/consecutiveSentenceTable.njk" %}
                {% include "./calculationSummary/consecutiveSentenceDatesTable.njk" %}
            </div>
        {% endif %}
    </div>

    {% include "./breakdown/datesWithAdjustments.njk" %}
{% endif %}