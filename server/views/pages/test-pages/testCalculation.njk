{% extends "../../partials/layout.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - test data" %}

{% block content %}
    {% include "../partials/formError.njk" %}
    <div class="test-content">
        <form method="get">
            {{ govukTextarea({
                name: "bookingData",
                id: "bookingData",
                value: bookingData,
                rows: 20,
                label: {
                    text: "Enter the booking data for the calculation in JSON format",
                    classes: "govuk-label--m"
                }
            }) }}
            <div class="govuk-grid-row  govuk-!-margin-bottom-0 govuk-!-padding-bottom-0">
                <div class="govuk-grid-column-three-quarters ">
                    {{ govukButton({
                        text: "Calculate",
                        preventDoubleClick: true,
                        attributes: {  'data-qa': 'continue-reg-lookup' }
                    }) }}
                </div>
            </div>
        </form>
        {% if (releaseDates) %}
            <h1 class="govuk-heading-m">Calculation results</h1>
            <p class="govuk-body govuk-!-font-size-19">
                {{ releaseDates | striptags(true) | escape | nl2br }}
            </p>
        {% endif %}

    </div>
{% endblock %}
