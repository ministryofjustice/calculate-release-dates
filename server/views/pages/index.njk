{% extends "../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Home" %}
{% set pageId = "index" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-xl" data-qa="main-heading">
                Calculate release dates
            </h1>
            <p class="govuk-body">Automatically calculate an offenderâ€™s release date using information from NOMIS.</p>
            <p class="govuk-body">The service currently supports a limited number of sentences. <a href="/supported-sentences">Check supported sentence types</a>.</p>
            {% if prisonId %}
                {% set startlink = "/calculation/" + prisonId + "/check-information" %}
            {% else %}
                {% set startlink = "/search/prisoners" %}
            {% endif %}
            {{ govukButton({
                text: "Start now",
                href: startlink,
                classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
                isStartButton: true,
                attributes: { 'data-qa': 'start-now-button' }
            }) }}
            <h2 class="govuk-heading-m">Before you start</h2>
            <p class="govuk-body">Check in NOMIS that the offender information includes:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>court cases</li>
                <li>court dates</li>
                <li>offences</li>
                <li>offence dates</li>
                <li>sentences</li>
                <li>adjustments </li>
            </ul>
        </div>
    </div>
{% endblock %}