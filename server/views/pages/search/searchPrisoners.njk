{% set pageTitle = applicationName + " - prisoner search" %}
{% set pageId = "prisoner-search" %}

{% block beforeContent %}
  {{ super() }}
  <nav>
    {{ govukBackLink({
        text: "Back",
        href: '/'
    }) }}
  </nav>
{% endblock %}
{% block content %}
  <div class="govuk-grid-row govuk-!-margin-bottom-4" data-qa="prisoner-search-section">
    <div id="prisoner-search-container">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
          {% if view %}Look up a person to see their release dates{% else %}Search for a prisoner{% endif %}
        </h1>
      </div>

      <div class="govuk-grid-column-full">
        <p class="govuk-body govuk-!-margin-bottom-7"  id="search-heading">You can search using a personâ€™s name or prison number.</p>
        {% include "../partials/prisonerSearch.njk" %}
