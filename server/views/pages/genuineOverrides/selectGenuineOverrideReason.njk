{% extends "../../partials/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% set pageTitle = applicationName + " - Select why the dates are incorrect" %}
{% set pageId = "genuine-override-reason" %}

{% block beforeContent %}
    {{ super() }}
    <nav>
        {{ govukBackLink({
            text: "Back",
            href: backLink,
            attributes: {"data-qa": "back-link"}
        }) }}
    </nav>
{% endblock %}

{% block content %}
    {% include '../partials/formError.njk' %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post">
                {% set otherReasonHtml %}
                    {{ govukCharacterCount({
                        id: "reason-further-detail",
                        name: "reasonFurtherDetail",
                        type: "string",
                        autocomplete: "string",
                        maxlength: 120,
                        threshold: 50,
                        classes: "govuk-!-width-two-thirds",
                        errorMessage: validationErrors | findError('reasonFurtherDetail'),
                        value: reasonFurtherDetail,
                        label: {
                            text: "Please enter the reason for this override"
                        }
                    }) }}
                {% endset %}

                {% set radios = [ ] %}

                {% for reason in reasons %}
                    {% if reason.code === 'OTHER' %}
                        {% set radios = (radios.push(
                            {
                                value: reason.code,
                                text: reason.description,
                                conditional: {
                                    html: otherReasonHtml
                                },
                                errorMessage: validationErrors | findError('reason'),
                                attributes: {'data-qa': 'reasonRadio-' + reason.code}

                            }
                        ), radios) %}
                    {% else %}
                        {% set radios = (radios.push(
                            {
                                value: reason.code,
                                text: reason.description,
                                attributes: {'data-qa': 'reasonRadio-' + reason.code}
                            }
                        ), radios) %}
                    {% endif %}
                {% endfor %}

                {{ govukRadios({
                    name: 'reason',
                    fieldset: {
                        legend: {
                            text: "Select why the dates are incorrect",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--xl"
                        }
                    },
                    errorMessage: errorMessageText,
                    items: radios,
                    value: reason
                }) }}
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                {{ govukButton({
                    text: "Continue",
                    type: submit,
                    preventDoubleClick: true,
                    attributes: {  'data-qa': 'submitGenuineOverrideReason' }
                }) }}
                {% set cancelUrl = "/calculation/" + prisonerDetail.offenderNo + "/cancelCalculation?redirectUrl=" + pageCancelRedirectUrl %}
                <a data-qa="cancel-link"
                   data-prevent-double-click="true" class="govuk-button govuk-!-margin-left-3 govuk-button--secondary no-js-hidden"
                   data-module="govuk-button"
                   href="{{ cancelUrl }}">
                    Cancel
                </a>
            </form>

        </div>
    </div>
{% endblock %}