{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - Supported sentences" %}
{% set pageId = "supported-sentences" %}

{% block beforeContent %}
    {{super()}}
    <nav>
        {% if prisonId %}
            {% set backlink = "/?prisonId=" + prisonId %}
        {% else %}
            {% set backlink = "/" %}
        {% endif %}
        {{ govukBackLink({
        text: "Back",
        href: backlink
    }) }}
    </nav>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl" data-qa="main-heading">
                Supported sentences
            </h1>
            <p class="govuk-body">The sentences currently supported by the Calculates release dates service are:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>CJA03 Standard Determinate Sentence</li>
                {% if featureToggles.eds %}
                    <li>EDS LASPO Automatic Release</li>
                    <li>EDS LASPO Discretionary Release</li>
                    <li>EDS Sec 266 Sentencing Code (18 - 20)</li>
                    <li>EDS Sec 279 Sentencing Code (21+)</li>
                    <li>EDS Sec 254 Sentencing Code (U18)</li>
                {% endif %}
                <li>FTR Schedule 15 Offender</li>
                <li>FTR Schedule 18 Sentencing Code Offender</li>
                <li>Fixed Term Recall Pre ORA Sentence</li>
                <li>Licence Recall</li>
                <li>ORA CJA03 Standard Determinate Sentence</li>
                <li>ORA 14 Day Fixed Term Recall</li>
                <li>ORA 28 Day Fixed Term Recall</li>
                <li>ORA FTR Schedule 15 Offender</li>
                <li>ORA FTR Sch 18 Sentencing Code Offender</li>
                <li>ORA Licence Recall</li>
                <li>ORA Sentencing Code Standard Determinate Sentence</li>
                <li>ORA Serious Offence -18 CJA03 POCCA 2000</li>
                <li>ORA Serious Offence Sec 250 Sentencing Code (U18)</li>
                <li>ORA Young Offender Institution</li>
                <li>Recall from YOI</li>
                <li>Recall Serious Offence - 18 CJA03 POCCA 2000</li>
                <li>Recall Serious Offence Sec 250 Sentencing Code (U18)</li>
                <li>Sentencing Code Standard Determinate Sentence</li>
                <li>Serious Offence -18 CJA03 POCCA 2000</li>
                <li>Serious Offence Sec 250 Sentencing Code (U18)</li>
                <li>Young Offender Institution</li>
            </ul>
        </div>
    </div>
{% endblock %}